{
    "name": "rtimer",
    "version": "1.0.0",
    "description": "A simple timer",
    "repository": {},
    "main": "main.js",
    "scripts": {
        "install": "cmake-js compile",
        "start": "electron .",
        "packager": "electron-packager . --asar --overwrite=true --icon=build_resources/icons/main_icon.png",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "build": {
        "directories": {
            "output": "build",
            "buildResources": "build_resources"
        },
        "files": [
            "**/*",
            "build/Release"
        ],
        "icon": "build_resources/icons/main_icon.png",
        "win": {
            "target": "appx",
            "certificateFile": "build_resources/selfsigncert.pfx",
            "certificatePassword": "password"
        },
        "linux": {
            "category": ""
        },
        "appx": {
            "identityName": "000pub.app",
            "publisher": "CN=000",
            "publisherDisplayName": "pub",
            "applicationId": "app"
        }
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "node-addon-api": "^1.7.1"
    },
    "devDependencies": {
        "cmake-js": "^6.0.0",
        "electron": "^7.1.2",
        "electron-builder": "^21.2.0",
        "electron-packager": "^14.1.1",
        "electron-rebuild": "^1.8.8"
    }
}