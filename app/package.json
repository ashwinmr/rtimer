    "license": "MIT",
    "dependencies": {
        "node-addon-api": "^1.7.1"
    },
    "devDependencies": {
        "cmake-js": "^6.0.0",
        "electron": "^7.1.2",
        "electron-builder": "^21.2.0",
        "electron-packager": "^14.1.1",
        "electron-rebuild": "^1.8.8"
    }
